<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
<body>
  <%- include('../partials/header-subpages.ejs') %>
  <main>
    <article class="content add-site">
      <section class="form-container">
        <h2 class="page-title">Add A Site</h2>
        <form action="/sites" method="POST">
          <label for="name">Site Name</label>
          <input type="text" id="name" name="name" required>
          <label for="address">Address</label>
          <input type="text" id="address" name="address" required>
          <label for="city">City</label>
          <input type="text" id="city" name="city" required>
          <label for="state">State</label>
          <div class="primary-select">
            <select name="state" id="state">
              <option value="" selected>Please choose</option>
              <option value="IL">IL</option>
            </select>
          </div>
          <label for="zip">Zip Code</label>
          <input type="text" id="zip" name="zip" required>
          <label for="phone">Phone</label>
          <input type="text" id="phone" name="phone" required>
          <label for="lat">Latatude</label>
          <input type="text" id="lat" name="lat" required>
          <label for="long">Longitude</label>
          <input type="text" id="long" name="long" required>
          <label for="info">Information</label>
          <textarea name="info" id="info" cols="30" rows="10"></textarea>
          <label for="file">File Name</label>
          <input type="text" id="file" name="file" required>
          <label for="activities">Activities</label>
          <textarea name="activities" id="activities" cols="30" rows="10"></textarea>
          <label for="link">Link Url</label>
          <input type="text" id="link" name="link" required>
          <button class="btn primary">Submit</button>
        </form>
      </section>
    </article>
  </main>
  <%- include('../partials/footer.ejs') %>

</body>
</html>